                                <li class="nav-item"><a class="nav-link" href="">Campus</a></li>
                            {% endif %}
                            <li class="nav-item"><a class="nav-link" href="{{ path('user_profile', {id: app.user.id}) }}">Mon profil</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('app_logout') }}">Se d√©connecter</a></li>
                        {% else %}
                            <li class="nav-item"><a class="nav-link" href="{{ path('app_login') }}">Se connecter</a></li>
                        {% endif %}
                    </ul>
                </div>
            </nav>
        </header>
    {% endblock %}
    {% block main %}

    {% endblock %}

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
