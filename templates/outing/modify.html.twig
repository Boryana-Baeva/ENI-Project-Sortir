{% extends 'default.html.twig' %}

{% block main %}

    <div class="container h-75 modify-block">
        <div class="row border rounded">
            <div class="monProfil text-center m-md-2">
                <h1>Modifier une sortie</h1>
                {{ form_start(modifyForm) }}
                <div class="info">
                    <table class="table">
                        <tbody>
                        <tr>
                            <td>{{ form_row(modifyForm.name) }}</td>
                        </tr>
                        <tr>
                            <td>{{ form_row(modifyForm.startDateTime) }}</td>
                        </tr>
                        <tr>
                            <td>{{ form_row(modifyForm.duration) }} minutes</td>
                        </tr>
                        <tr>
                            <td>{{ form_row(modifyForm.entryDeadline) }}</td>
                        </tr>
                        <tr>
                            <td>{{ form_row(modifyForm.maxNumberEntries) }}</td>
                        </tr>
                        <tr>
                            <td>{{ form_row(modifyForm.description) }}</td>
                        </tr>
                        <tr>
                            <td>{{ form_row(modifyForm.campus) }}</td>
                        </tr>
                        <tr>
                            <td>{{ form_row(modifyForm.place) }}</td>
                        </tr>

                        </tbody>

                    </table>

                </div>
            </div>

            {{ form_row(modifyForm._token) }}
            <div class=" d-inline-flex offset-4 mb-1">

                <button class="btn btn-primary mr-3 ml-3" type="submit">Enregistrer</button>

                {{ form_rest(modifyForm) }}
                {{ form_end(modifyForm) }}
                <div class=" d-inline-flex offset-4 mb-1">
                    <div class="addPlace text-center mr-3">
                        <h5>Ajouter un Lieu</h5>
                        {% embed 'place/add.html.twig' %}
                        {% endembed %}
                    </div>
                </div>
                <button class="btn btn-secondary ml-3" type="button"><a href="{{ path('outing_details', {id: outing.id}) }}">Annuler</a></button>

            </div>
        </div>
    </div>
{% endblock %}