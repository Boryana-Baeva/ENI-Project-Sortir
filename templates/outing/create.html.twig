{% extends 'default.html.twig' %}

{% block main %}
    <div class="form">
        {{ form_start(outingForm) }}
        {{ form_row(outingForm.name) }}
        {{ form_row(outingForm.startDateTime) }}
        {{ form_row(outingForm.duration) }}
        {{ form_row(outingForm.entryDeadline) }}
        {{ form_row(outingForm.maxNumberEntries) }}
        {{ form_row(outingForm.description) }}
        {{ form_row(outingForm.campus) }}
        {{ form_row(outingForm.place) }}
          <div class="container">
            <div class="row">
                <button type="button" class="btn btn-success" data-toggle="modal" data-target="#myModal">+</button>
                <div class="col-md-12">
                    <div class="modal fade" id="myModal">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title">Add a Place </h4>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                   {{ form_start(placeForm) }}
                                   {{ form_widget(placeForm) }}
                                    <button type="submit">Ajouter</button>
                                   {{ form_end(placeForm) }}
                                </div>
                                <div class="modal-footer">
                                    <input class="btn btn-default" value="Close">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>

        {# {{ form_row(outingForm.street) }}
        {{ form_row(outingForm.zipCode) }}
        {{ form_row(outingForm.city) }}
        {{ form_row(outingForm.latitude) }}
        {{ form_row(outingForm.longitude) }}#}
        <button type="submit">Enregistrer</button>
        {{ form_end(outingForm) }}
    </div>
{% endblock %}

