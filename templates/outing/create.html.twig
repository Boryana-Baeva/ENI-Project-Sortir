{% extends 'default.html.twig' %}

{% block main %}
<div class="container-fluid h-100 ">
    <div class="container block">
        <div class="row border rounded">
            <div class="monProfil text-center m-md-2">
                <h1>Cr√©er une sortie</h1>
                {{ form_start(outingForm) }}
                <div class="info">
                    <table class="table">
                        <tbody>
                        <tr>
                            <td>{{ form_row(outingForm.name) }}</td>
                        </tr>
                        <tr>
                            <td>{{ form_row(outingForm.startDateTime) }}</td>
                        </tr>
                        <tr>
                            <td>{{ form_row(outingForm.duration) }} minutes</td>
                        </tr>
                        <tr>
                            <td>{{ form_row(outingForm.entryDeadline) }}</td>
                        </tr>
                        <tr>
                            <td>{{ form_row(outingForm.maxNumberEntries) }}</td>
                        </tr>
                        <tr>
                            <td>{{ form_row(outingForm.description) }}</td>
                        </tr>
                        <tr>
                            <td>{{ form_row(outingForm.campus) }}</td>
                        </tr>
                        <tr>
                            <td>{{ form_row(outingForm.place) }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            {{ form_row(outingForm._token) }}
            <button class="btn btn-primary" type="submit">Enregistrer</button>
            {{ form_rest(outingForm) }}
            {{ form_end(outingForm) }}
            <button class="btn btn-secondary" type="button"><a href="{{ path('outing_search') }}">Annuler</a></button>
            {% embed 'place/add.html.twig' %}
            {% endembed %}
        </div>
    </div>
</div>

{% endblock %}

